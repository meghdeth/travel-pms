{
  "name": "travel-pms-backend",
  "version": "1.0.0",
  "description": "Travel PMS Backend API",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/server.ts",
    "build": "tsc",
    "test": "jest",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "seed": "knex seed:run",
    "db:reset": "knex migrate:rollback --all && knex migrate:latest && knex seed:run",
    "start:all": "concurrently \"npm run start:super-admin\" \"npm run start:vendor\" \"npm run start:hotel\" \"npm run start:booking\"",
    "dev:all": "concurrently \"npm run dev:super-admin\" \"npm run dev:vendor\" \"npm run dev:hotel\" \"npm run dev:booking\"",
    "start:super-admin": "cd services/super-admin-service && npm start",
    "start:vendor": "cd services/vendor-service && npm start",
    "start:hotel": "cd services/hotel-service && npm start",
    "start:booking": "cd services/booking-service && npm start",
    "dev:super-admin": "cd services/super-admin-service && npm run dev",
    "dev:vendor": "cd services/vendor-service && npm run dev",
    "dev:hotel": "cd services/hotel-service && npm run dev",
    "dev:booking": "cd services/booking-service && npm run dev",
    "install:all": "npm install && cd services/super-admin-service && npm install && cd ../vendor-service && npm install && cd ../hotel-service && npm install && cd ../booking-service && npm install",
    "build:all": "cd services/super-admin-service && npm run build && cd ../vendor-service && npm run build && cd ../hotel-service && npm run build && cd ../booking-service && npm run build"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.0.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "module-alias": "^2.2.3",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.0",
    "objection": "^3.1.5",
    "redis": "^4.6.7",
    "sharp": "^0.34.3",
    "socket.io": "^4.7.2",
    "uuid": "^11.1.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.4.5",
    "concurrently": "^8.2.0",
    "jest": "^29.6.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  },
  "_moduleAliases": {
    "@": "dist",
    "@/config": "dist/config",
    "@/controllers": "dist/controllers",
    "@/middleware": "dist/middleware",
    "@/models": "dist/models",
    "@/routes": "dist/routes",
    "@/utils": "dist/utils",
    "@/services": "dist/services",
    "@/types": "dist/types"
  },
  "keywords": [
    "travel",
    "pms",
    "hotel",
    "management",
    "api"
  ],
  "author": "Travel PMS Team",
  "license": "MIT"
}
